<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="80"
    android:background="@drawable/themebackground"
     >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="84dp"
    android:orientation="horizontal"
    android:weightSum="90" >
    
     </LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:weightSum="90" >

    <Button
        android:id="@+id/college_search_button2"
       android:layout_weight="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/postssss"
         />
    <Button
        android:id="@+id/college_events_button6"
        android:layout_weight="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        
        android:background="@drawable/eventssss"
         />
    <Button
        android:id="@+id/college_enginnering_services_button5"
        android:layout_weight="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
    
        android:background="@drawable/engineeringservicesss"
         />
    
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="104dp"
        android:orientation="horizontal"
        android:weightSum="90" >

    <Button
            android:id="@+id/college_students_button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@drawable/friends"
            android:padding="20dp" />
    
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="90" >
    </LinearLayout>

</LinearLayout>